version: '2'

services:
  mariadb:
    image: 'docker.io/bitnami/mariadb:10.2-debian-10'
    environment:
      - ALLOW_EMPTY_PASSWORD=yes
      - MARIADB_USER=insert_your_user
      - MARIADB_DATABASE=insert_your_db
      - MARIADB_PASSWORD=insert_your_password
    volumes:
      - ./mariadb_data:/bitnami/mariadb
    ports:
      - 3306:3306
  myapp:
    tty: true
    image: docker.io/bitnami/laravel:8-debian-10
    environment:
      - DB_HOST=mariadb
      - DB_USERNAME=insert_your_user
      - DB_DATABASE=insert_your_db
      - DB_PASSWORD=insert_your_password
    depends_on:
      - mariadb
    ports:
      - 3000:3000
    volumes:
      - ./:/app
    privileged: true
